            android:layout_height="wrap_content"
            android:src="@drawable/ic_shuffle_black_24dp"
            android:layout_marginRight="16dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="28dp"
        >
